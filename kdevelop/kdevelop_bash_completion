have kdevelop && _kdevelop()
{
    local cur prev
    COMPREPLY=()
    cur=`_get_cword`
    prev=${COMP_WORDS[COMP_CWORD-1]}
    case $prev in
        -s)
            COMPREPLY=( $( kdevelop --sessions 2>/dev/null | egrep "^{" | sed 's/:.*//' | sed 's/\s*\[running\]//' | tr '\n' ' ' ) )
            COMPREPLY=( $( compgen -W '${COMPREPLY[@]}' -- $cur ) )
            return 0
            ;;
    esac

} &&
complete -F _kdevelop kdevelop
